                            function toggleFavorite() {
                                const favBtn = document.querySelector('.fav-btn');
                                favBtn.classList.toggle('active');

                                // Lưu trạng thái yêu thích vào localStorage
                                const isFavorite = favBtn.classList.contains('active');
                                localStorage.setItem('isFavorite', isFavorite);

                                const message = isFavorite ? 'Đã lưu vào mục yêu thích!' : 'Đã xóa khỏi mục yêu thích!';
                                alert(message);
                            }

                            // Khi tải trang, kiểm tra trạng thái yêu thích
                            document.addEventListener('DOMContentLoaded', () => {
                                const isFavorite = localStorage.getItem('isFavorite') === 'true';
                                const favBtn = document.querySelector('.fav-btn');
                                if (isFavorite) {
                                    favBtn.classList.add('active'); // Thêm class active nếu đã được yêu thích
                                }
                            });

