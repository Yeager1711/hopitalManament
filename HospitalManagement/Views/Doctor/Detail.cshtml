                                const videoCallPage = "video_call.html"; // Đường dẫn đến trang gọi video
                                const phoneNumber = "03534477027"; // Số điện thoại
                                window.location.href = `${videoCallPage}?number=${phoneNumber}`; // Chuyển đến trang gọi video
